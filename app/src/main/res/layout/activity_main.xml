<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Başlangıç"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:weightSum="4"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:layout_weight="1"
                            android:padding="0dp"
                            android:id="@+id/spinnerDateDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </Spinner>

                        <Spinner
                            android:layout_weight="1"
                            android:padding="0dp"
                            android:id="@+id/spinnerDateMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </Spinner>

                        <Spinner
                            android:layout_weight="2"
                            android:padding="0dp"
                            android:id="@+id/spinnerDateYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </Spinner>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Bitiş"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:weightSum="4"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:layout_weight="1"
                            android:padding="0dp"
                            android:id="@+id/spinnerDateDay2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </Spinner>

                        <Spinner
                            android:layout_weight="1"
                            android:padding="0dp"
                            android:id="@+id/spinnerDateMonth2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </Spinner>

                        <Spinner
                            android:layout_weight="2"
                            android:padding="0dp"
                            android:id="@+id/spinnerDateYear2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </Spinner>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:id="@+id/spinnerType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </Spinner>

                <Spinner
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:id="@+id/spinnerSubject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="1dp"
                android:background="@drawable/eshotbackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@color/colorWhiteBlur25"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:background="@color/colorWhiteBlur25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ListView
                            android:id="@+id/lvMsg"
                            android:layout_margin="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </ListView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>